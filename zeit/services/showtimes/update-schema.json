{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {},
  "id": "http://example.com/example.json",
  "properties": {
    "description": {
      "id": "/properties/description",
      "type": "string"
    },
    "full_description": {
      "id": "/properties/full_description",
      "type": "string"
    },
    "_id": {
      "id": "/properties/id",
      "maxLength": 24,
      "minLength": 24,
      "pattern": "^[a-f\\d]{24}$",
      "title": "Primary key for event",
      "type": "string"
    },
    "image": {
      "default": "https://cdn.nerdsauce.io/blank.gif",
      "id": "/properties/image",
      "maxLength": 24,
      "minLength": 24,
      "pattern": "^[a-f\\d]{24}$",
      "title": "Main image for the event",
      "type": "string"
    },
    "rating": {
      "default": "PG-13",
      "id": "/properties/rating",
      "title": "MPAA rating for the show",
      "type": "string"
    },
    "title": {
      "id": "/properties/name",
      "maxLength": 70,
      "minLength": 2,
      "title": "Title for the event",
      "type": "string"
    },
    "type": {
      "id": "/properties/type",
      "type": "string"
    },
    "venue_id": {
      "id": "/properties/venue_id",
      "maxLength": 24,
      "minLength": 24,
      "pattern": "^[a-f\\d]{24}$",
      "title": "Foreign key for parent venue",
      "type": "string"
    },
    "video": {
      "id": "/properties/video",
      "pattern": "^www\\.youtube\\.com\\/embed\\/\\S*$",
      "title": "A related video for the event",
      "type": "string"
    }
  },
  "required": [
    "venue_id",
    "_id",
    "title"
  ],
  "type": "object"
}
